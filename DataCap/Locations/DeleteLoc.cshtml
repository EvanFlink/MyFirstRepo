@{
    var Loc_id=Request["loc"];
    var co_id=Request["id"];

    var sSQL ="";
    var db = Database.Open("DDIncV2");

//Get Co Name    
    sSQL = "SELECT * FROM Company where CO_ID=@0";
    var Co = db.QuerySingle(sSQL, co_id);
    var Form_CO_Name ="";
    if(String.IsNullOrEmpty(Co.CO_Abbrev_Name))
    { Form_CO_Name = Co.CO_Name; }
    else
        {if(String.IsNullOrEmpty(Co.CO_Name))
            { Form_CO_Name = Co.CO_Abbrev_Name;}
        else{ Form_CO_Name = Co.CO_Name + "("+ Co.CO_Abbrev_Name +")";}
    }

//Get Loc/Branch Name    
    sSQL = "SELECT * FROM Location where LocationID=@0";
    var Loc = db.QuerySingle(sSQL, Loc_id);
    var Form_Loc_Name = Loc.Loc_Branch_Name;
    


//Do the Delete
    if(IsPost){
        var sSQL_Delete = "DELETE FROM Location WHERE LocationID=@0";
        db.Execute(sSQL_Delete, Loc_id);
      Response.Redirect("~/Datacap/Locations/Locations?id=" + @co_id);
        }
}

<h1>Delete a Location</h1>
<p>&nbsp</p>
<p style="font-family: Calibri; font-size: 180% ; font-weight: 300 ">
    Are you sure you want to delete the&nbsp<span style="font-weight: 900">@Form_Loc_Name</span>
    location for
    <span style="font-weight: 900">@Form_CO_Name ?</span></p>
<p>&nbsp</p>
<form action="" method="post">
    <input class="btn btn-default btn-lg" type="submit" value="Yes"/>
    <input class="btn btn-default btn-lg" type="button" value="No" onclick="window.location = 'Locations?id=' + @co_id" />
</form>


