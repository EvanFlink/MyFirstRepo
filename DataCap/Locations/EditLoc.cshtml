@{
    var Loc_id=Request["loc"];
    var co_id=Request["id"];

    var sSQL = "SELECT * FROM Location where LocationID=@0";
    var db = Database.Open("DDIncV2");

    //returns one record (row), a complex data type
    var qryLoc = db.QuerySingle(sSQL, Loc_id);

    //Get the existing field values from the record
        var Loc_Branch_Name = qryLoc.Loc_Branch_Name;
        var Loc_Addr = qryLoc.Address;
        var Loc_City = qryLoc.City;
        var Loc_St = qryLoc.ST;
        var Loc_Zip = qryLoc.Zip;
        var Loc_Website = qryLoc.Website;
        var Loc_Email = qryLoc.CO_Email;


//update & save
    if(IsPost){
      Loc_Branch_Name = Request["Loc_Branch_Name"];
      Loc_Addr = Request["Loc_Addr"];
      Loc_City = Request["Loc_City"];
      Loc_St = Request["Loc_St"];
      Loc_Zip = Request["Loc_Zip"];
      Loc_Website = Request["Loc_Website"];
      Loc_Email = Request["Loc_Email"];

        var SQLUPDATE = "UPDATE Location Set Loc_Branch_Name=@1, Address=@2, City=@3,  ST=@4, Zip=@5, Website=@6, CO_Email=@7  WHERE LocationID=@0";
//        Response.Write(id + ", " + CO_Abbrev_Name + ", " + CO_Name + ", " + CO_Type_ID + ", " + CO_Status_ID + ", " + Main_Contact_ID );
        db.Execute(SQLUPDATE, Loc_id, Loc_Branch_Name, Loc_Addr, Loc_City, Loc_St, Loc_Zip, Loc_Website, Loc_Email);
        Response.Redirect("~/Datacap/Locations/Locations?id=" + @co_id);
        }
}

